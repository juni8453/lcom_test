<select id="selectHotList" resultMap="Product5">
SELECT		*
FROM		vue_product	ta
LEFT JOIN	(
			SELECT		*
			FROM		vue_heart
			WHERE 		u_id = #{username}
			) 
			tb ON ta.p_id = tb.p_id
LEFT JOIN 	vue_img	tc ON ta.p_name = tc.p_name
LEFT JOIN	userlist td ON tb.u_id = td.u_id ORDER BY p_like DESC
LIMIT		#{pageOpt},8
</select>

