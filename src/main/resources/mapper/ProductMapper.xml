<insert id="insertProduct" parameterType="Product">
	      INSERT INTO vue_product(
			p_name,
			p_price,
			p_from,
			p_brand
			
		)VALUES(
			#{pName},
			#{pPrice},
			#{pFrom},
			#{pBrand}
		)
</insert>
 
<delete id="deleteProduct" parameterType="Product">
	DELETE 		a,b,c
	FROM 	 	vue_product a
	LEFT JOIN 	vue_img b	ON a.p_id = b.i_id
	LEFT JOIN	vue_cart c 	ON a.p_id = c.p_id
	WHERE		a.p_id = #{pId}
</delete>

<update id="cancelLike" parameterType="Product">
	UPDATE		vue_product
	SET			p_like = p_like-1
	WHERE 		p_id = #{pId}
</update>

<delete id="deleteCart" parameterType="Cart">
	DELETE 		
	FROM 	 	vue_cart 
	WHERE		ct_id = #{ctId}
</delete>
 
<!-- vue_cart 테이블에서 조건절에 맞는 부분을 SELECT했을때 해당 값이 존재하지 않는다면 INSERT 하는 구문 -->
<insert id="insertPutCart" parameterType="Cart">
   INSERT INTO vue_cart(
		p_id,
		u_id
	)
	SELECT	
		#{pId},
		#{username}
	FROM 	dual
	WHERE	NOT EXISTS(
		SELECT 	*
		FROM	vue_cart
		WHERE	p_id = #{pId}
		AND		u_id = #{username}
	) 
</insert>

<insert id="insertHeart" parameterType="Heart">
	INSERT INTO vue_heart(
		p_id,
		u_id
	)
	SELECT
		#{pId},
		#{username}
	FROM 	dual
	WHERE	NOT EXISTS(
		SELECT	*
		FROM	vue_heart
		WHERE	p_id = #{pId}
		AND		u_id = #{username}
	)
</insert>

<delete id="deleteHeart" parameterType="Heart">
	DELETE
	FROM		vue_heart
	WHERE		p_id = #{pId}
	AND			u_id = #{username}
</delete>

<update id="likeProduct" parameterType="Product">
	UPDATE		vue_product
	SET			p_like = p_like+1
	WHERE 		p_id = #{pId}
</update>

