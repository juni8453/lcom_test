<select id="selectCartList" resultMap="Cart1">
	SELECT 
		c.ct_id,
		c.p_id,
		c.u_id,
		p.p_name,
		p.p_price,
		p.p_from,
		p.p_brand,
		i.i_name,
		i.i_pk,
		i.i_id

	FROM 			vue_cart c
	LEFT JOIN 		vue_product p 
	ON				c.p_id = p.p_id
	LEFT JOIN		vue_img i
	ON				i.p_id = p.p_id
