<select id="selectProductList" resultMap="Product1">
SELECT		*
FROM		vue_product	ta
LEFT JOIN	(
			SELECT		*
			FROM		vue_heart
			WHERE 		u_id = #{username}
			) 
			tb ON ta.p_id = tb.p_id
LEFT JOIN 	vue_img	tc ON ta.p_id = tc.p_id
LEFT JOIN	userlist td ON tb.u_id = td.u_id
LIMIT		#{pageOpt},8
</select>

